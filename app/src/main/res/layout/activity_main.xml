<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2"
    android:padding="5dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

   <LinearLayout
       android:gravity="center"
       android:clipToPadding="false"
       android:orientation="horizontal"
       android:layout_weight="1"
       android:layout_width="match_parent"
       android:layout_height="0dp">


      <android.support.v7.widget.CardView
          android:id="@+id/schoolCardViewId"
          android:layout_margin="10dp"
          android:foreground="andriod:attr/selectableItemBackground"
          android:clickable="true"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="match_parent">
         <LinearLayout
             android:orientation="vertical"
             android:gravity="center"
             android:layout_width="match_parent"
             android:layout_height="match_parent"/>
            <ImageView
                android:background="@color/material_deep_purple"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/school"
                android:padding="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
               android:layout_margin="10dp"
               android:background="@color/material_deep_purple"
              />

           <TextView
               android:text="@string/Option1"
               android:textSize="25sp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:textAlignment="center"
               android:textStyle="bold"
               android:textAppearance="?android:textAppearanceLarge"/>

      </android.support.v7.widget.CardView>

         <android.support.v7.widget.CardView
             android:id="@+id/hospitalCardViewId"
             android:layout_margin="10dp"
             android:foreground="andriod:attr/selectableItemBackground"
             android:clickable="true"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
               <ImageView
                   android:background="@color/material_pink"
                   android:layout_width="64dp"
                   android:layout_height="64dp"
                   android:src="@drawable/hospital"
                   android:padding="10dp"/>
               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_margin="10dp"
                   android:background="@color/material_pink"
                   />

               <TextView
                   android:text="@string/Option2"
                   android:textSize="25sp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:textAlignment="center"
                   android:textStyle="bold"
                   android:textAppearance="?android:textAppearanceLarge"/>

            </LinearLayout>
         </android.support.v7.widget.CardView>
   </LinearLayout>
   <LinearLayout
       android:gravity="center"
       android:clipToPadding="false"
       android:orientation="horizontal"
       android:layout_weight="1"
       android:layout_width="match_parent"
       android:layout_height="0dp">


      <android.support.v7.widget.CardView
          android:id="@+id/resturentCardViewId"
          android:layout_margin="10dp"
          android:foreground="andriod:attr/selectableItemBackground"
          android:clickable="true"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="match_parent">
         <LinearLayout
             android:orientation="vertical"
             android:gravity="center"
             android:layout_width="match_parent"
             android:layout_height="match_parent"/>
         <ImageView
             android:background="@color/material_green"
             android:layout_width="64dp"
             android:layout_height="64dp"
             android:src="@drawable/restrunt"
             android:padding="10dp"/>
         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:layout_margin="10dp"
             android:background="@color/material_green"
             />

         <TextView
             android:text="@string/Option3"
             android:textSize="25sp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:textAlignment="center"
             android:textStyle="bold"
             android:textAppearance="?android:textAppearanceLarge"/>

      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
          android:id="@+id/airportCardViewId"
          android:layout_margin="10dp"
          android:foreground="andriod:attr/selectableItemBackground"
          android:clickable="true"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="match_parent">
         <LinearLayout
             android:orientation="vertical"
             android:gravity="center"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
            <ImageView
                android:background="@color/material_blue"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/airport"
                android:padding="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="@color/material_blue"
                />

            <TextView
                android:text="@string/Option4"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textAppearance="?android:textAppearanceLarge"/>

         </LinearLayout>
      </android.support.v7.widget.CardView>
   </LinearLayout>
</LinearLayout>